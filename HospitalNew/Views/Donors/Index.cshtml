@model IEnumerable<HospitalNew.Models.Donor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DonorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonorMessage)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonorMessage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DonorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DonorID">Details</a> |
